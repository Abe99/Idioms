{
  "unit": {
    "number": 6,
    "title": "Cause and Effect",
    "exercises": [
      {
        "number": 1,
        "type": "fill-blank",
        "instruction": "Complete the sentences using the correct word or phrase.",
        "questions": [
          {
            "number": 1,
            "prompt": "Heavy rainfall ________ severe flooding in the region.",
            "answers": ["caused", "led to", "resulted in"]
          },
          {
            "number": 2,
            "prompt": "The accident occurred ________ poor visibility.",
            "answers": ["because of", "due to"]
          },
          {
            "number": 3,
            "prompt": "The company increased prices. ________, sales declined.",
            "answers": ["As a result", "Consequently", "Therefore"]
          },
          {
            "number": 4,
            "prompt": "Lack of funding can ________ delays in the project.",
            "answers": ["cause", "lead to", "result in"]
          },
          {
            "number": 5,
            "prompt": "The policy change had a significant ________ on employment levels.",
            "answers": ["effect", "impact"]
          }
        ]
      },
      {
